{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.8",
  "description": "__MSG_extDescription__",
  "default_locale": "zh_TW",
  "icons": {
	  "16": "imgs/icon_16.jpg",
		"32": "imgs/icon_32.jpg",
		"64": "imgs/icon_64.jpg",	
		"128": "imgs/icon_128.jpg"
  },
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/watch?*", "https://www.youtube.com/watch?*"],
      "js": ["libs/lib.js", "youtube.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://mymedia.yam.com/m/*"],
      "js": ["libs/lib.js", "yam.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://www.dailymotion.com/video/*"],
      "js": ["libs/lib.js", "dailymotion.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://www.funshion.com/subject/play/*"],
      "js": ["funshion.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://v.pps.tv/play_*"],
      "js": ["libs/jquery-1.8.3.min.js", "libs/async.js", "ppstream.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs"
  ],
  "browser_action": {
	  "default_icon": "imgs/swiss.png",
    "default_title": "__MSG_extName__",
    "default_popup": "intro.html"
  }
}